{
  "name": "@coko/client",
  "version": "0.0.3",
  "description": "Client side common code for coko apps",
  "keywords": [
    "coko",
    "pubsweet"
  ],
  "repository": {
    "type": "git",
    "url": "git@gitlab.coko.foundation:cokoapps/client.git"
  },
  "license": "MIT",
  "author": "Yannis Barlas",
  "main": "src",
  "scripts": {
    "cz": "git-cz",
    "release": "standard-version",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS && lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "dependencies": {
    "@pubsweet/ui-toolkit": "^2.3.2",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@coko/lint": "^1.1.0",
    "standard-version": "^9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
